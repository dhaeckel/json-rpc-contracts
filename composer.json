{
    "name": "haeckel/json-rpc-server-contracts",
    "description": "Small framework for writing JSON-RPC 2.0 servers. Inspired by psr-15",
    "type": "library",
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1"
    },
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Haeckel\\JsonRpcServerContract\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Dominik HÃ¤ckel"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan"
        ],
        "cs": [
            "vendor/bin/phpcs src/"
        ],
        "cbf": [
            "vendor/bin/phpcbf src/"
        ],
        "ci": [
            "@cbf",
            "@cs",
            "phpstan"
        ]
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*"
    }
}
